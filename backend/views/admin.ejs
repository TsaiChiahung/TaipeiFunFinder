<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8">
  <title>後台管理</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/admin">後台管理</a>
      <a class="nav-link text-white" href="/">返回前台</a>
    </div>
  </nav>

  <div class="container my-5">
    <h1 class="mb-4">活動管理</h1>
    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>狀態</th>
            <th>標題</th>
            <th>日期</th>
            <th class="text-center">操作</th>
          </tr>
        </thead>
        <tbody>
          <% if (events.length === 0) { %>
            <tr><td colspan="4" class="text-center p-4">目前沒有可管理的活動。</td></tr>
          <% } else { %>
            <% events.forEach(event => { %>
              <tr>
                <td>
                  <% if (event.status === 'pending') { %><span class="badge bg-warning text-dark">待審核</span><% } %>
                  <% if (event.status === 'approved') { %><span class="badge bg-success">已上架</span><% } %>
                  <% if (event.status === 'archived') { %><span class="badge bg-secondary">已下架</span><% } %>
                </td>
                <td>
                  <a href="<%= event.linkUrl %>" target="_blank" rel="noopener noreferrer">
                    <% if (event.isRecommended) { %>✨<% } %> <%= event.title %>
                  </a>
                </td>
                <td><%= new Date(event.startDate).toLocaleDateString('zh-TW') %></td>
                <td class="text-center">
                  <% if (event.status === 'pending') { %>
                    <button class="btn btn-success btn-sm approve-btn" data-id="<%= event._id %>">核准</button>
                  <% } else if (event.status === 'approved') { %>
                    <button class="btn btn-warning btn-sm unpublish-btn" data-id="<%= event._id %>">下架</button>
                    <button class="btn btn-outline-primary btn-sm recommend-btn" data-id="<%= event._id %>">
                      <%= event.isRecommended ? '取消精選' : '設為精選' %>
                    </button>
                  <% } else if (event.status === 'archived') { %>
                    <button class="btn btn-info btn-sm republish-btn" data-id="<%= event._id %>">上架</button>
                  <% } %>
                  <button class="btn btn-danger btn-sm reject-btn" data-id="<%= event._id %>">刪除</button>
                </td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

<script>
document.body.addEventListener('click', async (e) => {
  const target = e.target;
  const id = target.dataset.id;
  if (!id) return;

  let url = '';
  let confirmation = false;

  if (target.classList.contains('approve-btn')) url = `/api/events/${id}/approve`;
  if (target.classList.contains('unpublish-btn')) url = `/api/events/${id}/unpublish`;
  if (target.classList.contains('republish-btn')) url = `/api/events/${id}/republish`;
  // 👇 加上新的判斷式
  if (target.classList.contains('recommend-btn')) url = `/api/events/${id}/toggle-recommend`; 
  
  if (target.classList.contains('reject-btn')) {
    confirmation = confirm('確定要永久刪除這個活動嗎？');
    if (confirmation) url = `/api/events/${id}/reject`;
  }
  
  if (url && (confirmation || !target.classList.contains('reject-btn'))) {
    const res = await fetch(url, { method: 'POST' });
    if (res.ok) {
      window.location.reload();
    } else {
      alert('操作失敗！');
    }
  }
});
</script>
</body>
</html>