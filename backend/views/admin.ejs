<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8">
  <title>後台管理</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/admin">後台管理</a>
      <a class="nav-link text-white" href="/">返回前台</a>
    </div>
  </nav>

  <div class="container my-5">
    <h1 class="mb-4">活動管理</h1>
    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>狀態</th>
            <th>標題</th>
            <th>日期</th>
            <th class="text-center">操作</th>
          </tr>
        </thead>
        <tbody>
          <% if (events.length === 0) { %>
            <tr><td colspan="4" class="text-center p-4">目前沒有可管理的活動。</td></tr>
          <% } else { %>
            <% events.forEach(event => { %>
              <tr>
                <td>
                  <% if (event.status === 'pending') { %><span class="badge bg-warning text-dark">待審核</span><% } %>
                  <% if (event.status === 'approved') { %><span class="badge bg-success">已上架</span><% } %>
                  <% if (event.status === 'archived') { %><span class="badge bg-secondary">已下架</span><% } %>
                </td>
                <td>
                  <a href="<%= event.linkUrl %>" target="_blank" rel="noopener noreferrer">
                    <% if (event.isRecommended) { %>✨<% } %> <%= event.title %>
                  </a>
                </td>
                <td><%= new Date(event.startDate).toLocaleDateString('zh-TW') %></td>
                <td class="text-center">
                  <% if (event.status === 'pending') { %>
                    <button class="btn btn-success btn-sm approve-btn" data-id="<%= event._id %>">核准</button>
                  <% } else if (event.status === 'approved') { %>
                    <button class="btn btn-warning btn-sm unpublish-btn" data-id="<%= event._id %>">下架</button>
                    <button class="btn btn-outline-primary btn-sm recommend-btn" data-id="<%= event._id %>">
                      <%= event.isRecommended ? '取消精選' : '設為精選' %>
                    </button>
                  <% } else if (event.status === 'archived') { %>
                    <button class="btn btn-info btn-sm republish-btn" data-id="<%= event._id %>">上架</button>
                  <% } %>
                  <button class="btn btn-danger btn-sm reject-btn" data-id="<%= event._id %>">刪除</button>
                </td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

<script>
document.body.addEventListener('click', async (e) => {
  // 找到被點擊的目標按鈕
  const target = e.target;
  const id = target.dataset.id;

  // 如果點擊的不是帶有 data-id 的按鈕，就直接忽略
  if (!id) return;

  let url = '';
  let method = 'POST'; // 我們所有的操作都是 POST

  // 根據按鈕的 class 決定要呼叫哪個 API
  if (target.classList.contains('approve-btn')) {
    url = `/api/events/${id}/approve`;
  } else if (target.classList.contains('unpublish-btn')) {
    url = `/api/events/${id}/unpublish`;
  } else if (target.classList.contains('republish-btn')) {
    url = `/api/events/${id}/republish`;
  } else if (target.classList.contains('recommend-btn')) {
    url = `/api/events/${id}/toggle-recommend`;
  } else if (target.classList.contains('reject-btn')) {
    // 刪除按鈕需要額外確認
    if (confirm('確定要永久刪除這個活動嗎？這個操作無法復原。')) {
      url = `/api/events/${id}/reject`;
    }
  }

  // 如果 url 已經被設定（代表是一個有效的操作按鈕被點擊）
  if (url) {
    try {
      const response = await fetch(url, { method: method });
      
      if (response.ok) {
        // 操作成功，重新整理頁面以顯示最新狀態
        window.location.reload();
      } else {
        // 操作失敗，顯示從後端傳來的錯誤訊息
        const errorData = await response.json();
        alert(`操作失敗： ${errorData.message || '伺服器發生未知錯誤'}`);
      }
    } catch (err) {
      console.error('請求發送失敗:', err);
      alert('無法連接到伺-服器，請檢查你的網路連線。');
    }
  }
});
</script>
</body>
</html>