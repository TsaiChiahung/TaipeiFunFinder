<%- include('partials/header', { title: '首頁' }) %>

<div class="container my-4">
  <form class="row g-2" method="GET" action="/search">
    <div class="col-md-2">
      <input type="text" name="category" class="form-control" placeholder="輸入類別">
    </div>
    <div class="col-md-2">
      <input type="text" name="location" class="form-control" placeholder="輸入行政區">
    </div>
    <div class="col-md-2">
      <input type="text" name="address" class="form-control" placeholder="輸入地點">
    </div>
    <div class="col-md-2">
      <input type="date" name="date" class="form-control">
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-primary w-100">搜尋</button>
    </div>
  </form>
</div>

<div class="container my-5">
  
  <div class="section-title">
    <h2><span>✨ 精選推薦</span><small class="text-muted">Editor's Picks</small></h2>
  </div>
  <% if (recommendedEvents && recommendedEvents.length > 0) { %>
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4 mb-5">
      <% recommendedEvents.forEach(event => { %>
        <%- include("partials/eventCard", { event: event }) %>
      <% }); %>
    </div>
  <% } else { %>
    <p class="text-center text-muted">目前沒有特別推薦的活動。</p>
  <% } %>

  <div class="section-title">
    <h2><span>今天的活動</span><small class="text-muted">Today's Events</small></h2>
  </div>
  <% if (todayEvents.length === 0) { %>
    <p class="text-center text-muted">今天沒有活動。</p>
  <% } else { %>
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4 mb-5">
      <% todayEvents.forEach(event => { %>
        <%- include("partials/eventCard", { event: event }) %>
      <% }); %>
    </div>
  <% } %>
  
  </div>

<%- include('partials/footer') %>