  <script>
document.addEventListener("DOMContentLoaded", () => {
  
  // ä½¿ç”¨äº‹ä»¶å§”æ´¾ä¾†è™•ç†æ‰€æœ‰æŒ‰éˆ•é»æ“Šï¼Œæ•ˆèƒ½æ›´å¥½
  document.body.addEventListener('click', async (e) => {
    
    
    // --- æŒ‰è®šé‚è¼¯ ---
    if (e.target.closest('.like-btn')) {
      const btn = e.target.closest('.like-btn');
      const id = btn.dataset.id;
      // âœ… ä¿®æ­£ API è·¯å¾‘ç‚º /api/events/...ï¼Œæ–¹æ³•ç‚º PUT
      const res = await fetch(`/api/events/${id}/like`, { method: "PUT" });
      const data = await res.json();
      if (res.ok) {
        btn.querySelector(".like-count").textContent = data.likes;
      }
    }

    // --- å±•é–‹/æ”¶åˆç•™è¨€å€å¡Šé‚è¼¯ ---
    if (e.target.closest('.comment-toggle')) {
      const btn = e.target.closest('.comment-toggle');
      const box = document.getElementById(`comment-box-${btn.dataset.id}`);
      if (box) box.classList.toggle("d-none");
    }
  });

  // ä½¿ç”¨äº‹ä»¶å§”æ´¾ä¾†è™•ç†æ‰€æœ‰è¡¨å–®æäº¤
  document.body.addEventListener('submit', async (e) => {
    if (e.target.matches('.comment-form')) {
      e.preventDefault();
      const form = e.target;
      const id = form.dataset.id;
      const textInput = form.querySelector("input[name='text']");
      const text = textInput.value;

      if (!text.trim()) return; // é˜²æ­¢é€å‡ºç©ºç•™è¨€

      // âœ… ä¿®æ­£ API è·¯å¾‘ç‚º /api/events/.../comments
      const res = await fetch(`/api/events/${id}/comments`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ body: text }) // å¾Œç«¯éœ€è¦çš„æ˜¯ body æ¬„ä½
      });
      const data = await res.json();
      
      
      if (res.ok) {
        const list = form.parentElement.querySelector(".comment-list");
        list.innerHTML = ""; // æ¸…ç©ºèˆŠåˆ—è¡¨
        data.comments.forEach(c => {
          const li = document.createElement("li");
          li.className = "list-group-item py-1";
          // âœ… å¾Œç«¯å›å‚³çš„æ˜¯ author å’Œ body
          li.textContent = `${c.author}: ${c.body}`; 
          list.appendChild(li);
        });
        form.reset();
      }
    }
  });
});
</script>
